<!DOCTYPE html>

<html>
<head>

    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Beardslee Public House</title>

    <link href='http://fonts.googleapis.com/css?family=Oswald:400,700,300' rel='stylesheet' type='text/css'>

    <link href="/css/libs.css" rel="stylesheet" />
    <script src="/js/libs.js"></script>


</head>
<body>

    <!-- Header Nav -->
    <header id="top">
        <nav class="navbar navbar-inverse navbar-fixed-top cbp-af-header">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="header-logo">
                        <a href="/Home">
                            <img src="/app/images/Beardslee_Home_Logo.png" alt="Beardslee Home Logo" class="img-responsive" />
                        </a>
                    </div>
                </div>
                <div class="collapse navbar-collapse" id="header-navigation">
                    <ul class="nav navbar-nav navbar-left">
                        <li class="@(ViewBag.Title=="What We Make" ? "active" : "")"><a href="/WhatWeMake">WHAT WE MAKE</a></li>
                        <li class="@(ViewBag.Title=="Who We Are" ? "active" : "")"><a href="/WhoWeAre">WHO WE ARE</a></li>
                        <li class="@(ViewBag.Title=="Why We Are" ? "active" : "")"><a href="/WhyWeAre">WHY WE ARE</a></li>
                        <li class="@(ViewBag.Title=="What They Said" ? "active" : "")"><a href="/WhatTheySaid">WHAT THEY SAID</a></li>
                        <li class="@(ViewBag.Title=="What You'll See" ? "active" : "")"><a href="/WhatYouSee">WHAT YOU'll SEE</a></li>
                        <li class="@(ViewBag.Title=="Mailing List" ? "active" : "")"><a href="/MailingList">MAILING LIST</a></li>
                        <li class="@(ViewBag.Title=="Gift Cards" ? "active" : "")"><a href="/GiftCards">GIFT CARDS</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>

        @RenderBody()

        <!-- Company Info -->
        <div id="company-info">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 col-sm-3 col-sm-offset-1">
                        <h3>HOURS</h3>
                        <address>
                            Lunch / Dinner:<br />
                            Monday - Saturday 11:30 AM - 10:00 PM<br />
                            Sunday 11:30 AM - 9:00 PM
                        </address>
                        <address>
                            Bar:<br />
                            Monday - Thursday 11:30 AM - 11:00 PM<br />
                            Friday - Saturday 11:30 AM - 12:00 AM<br />
                            Sunday 11:30 AM - 10:00 PM
                        </address>
                        <address>
                            Happy Hour (Food &amp; Beer):<br />
                            Monday - Friday 3:00 PM - 6:00 PM<br />
                            Saturday - Sunday 2:00 PM - 5:00 PM<br />
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-3 col-sm-offset-1">
                        <h3>LOCATION</h3>
                        <address>
                            Beardslee Public House<br />
                            19116 Beardslee Blvd.<br />
                            Bothell, WA 98011<br /><br />
                            Phone: 425.286.1001<br /><br />
                            <a href="https://www.google.com/maps/dir//19116+Beardslee+Blvd,+Bothell,+WA+98011/47.7664414,-122.1909048,17z/data=!4m13!1m4!3m3!1s0x54900e60c67adca9:0xf2d333bf8c594fab!2s19116+Beardslee+Blvd,+Bothell,+WA+98011!3b1!4m7!1m0!1m5!1m1!1s0x54900e60c67adca9:0xf2d333bf8c594fab!2m2!1d-122.1909048!2d47.7664414" target="_blank">Driving Directions</a>
                        </address>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <h3>LINKS</h3>
                        <ul class="home-links">
                            <li><a href="http://www.seastarrestaurant.com/" target="_blank">Seastar Restaurant and Raw Bar</a></li>
                            <li><a href="http://www.johnhowiesteak.com" target="_blank">John Howie Steak</a></li>
                            <li><a href="http://www.sportrestaurant.com" target="_blank">Sport Restaurant &amp; Bar</a></li>
                            <li><a href="http://www.wildwoodspiritsco.com/" target="_blank">Wildwood Spirits Co</a></li>
                            <li><a href="http://www.plankcooking.com" target="_blank">Plank Cooking</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 icons">
                    <img class="footer-logo" src="/app/images/Footer_Home_Button.png" alt="Logo" />
                </div>
                <div class="col-xs-12 icons">
                    <a href="https://www.facebook.com/BeardsleePublicHouse" target="_blank"><img class="facebook-icon" src="/app/images/Facebook.png" alt="Facebook" /></a>
                    <a href="http://www.pinterest.com/chefjohnhowie/beardslee-public-house/" target="_blank"><img class="pinterest-icon" src="/app/images/Pinterest.png" alt="Pinterest" /></a>
                </div>
                <div class="col-xs-12">
                    <hr />
                    <p class="text">&copy; 2016 BEARDSLEE ALEHOUSE</p>
                </div>
            </div>
        </div>
    </footer>

    
    @RenderSection("Scripts", required: false)




</body>
</html>
